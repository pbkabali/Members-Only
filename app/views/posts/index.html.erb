<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <%if user_signed_in?%>
        <th>Author</th>
      <%end%>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <%if user_signed_in?%>
          <td><%= post.user.username %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if !user_signed_in? %>
  <%= link_to 'Sign up', new_user_registration_path %>
  <%= link_to 'Sign in', new_user_session_path %>
<%end%>
<%= link_to 'New Post', new_post_path %>
<% if user_signed_in? %>
  <%= link_to 'Sign out', destroy_user_session_path, method: "delete" %>
<%end%>

